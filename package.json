{
  "name": "arobid-mcp",
  "version": "1.0.0",
  "description": "MCP server for connecting to Arobid Backend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/server.js",
    "dev": "tsc --watch",
    "dev:http": "tsc --watch & node --watch dist/server.js",
    "test:mcp": "node test-mcp.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "arobid"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.18.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
