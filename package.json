{
  "name": "arobid-mcp",
  "version": "1.0.0",
  "description": "MCP server for connecting to Arobid Backend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --outDir dist",
    "dev:vercel": "npx vercel dev",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{md,json}\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "arobid"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "mcp-handler": "^1.0.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "vercel": "48.12.0"
  },
  "packageManager": "pnpm@9.4.0"
}
