{
  "name": "arobid-mcp",
  "version": "1.0.0",
  "description": "MCP server for connecting to Arobid Backend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{md,json}\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "arobid"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "mcp-handler": "^1.0.4",
    "next": "^16.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "prettier": "^3.6.2",
    "puppeteer": "^24.31.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
